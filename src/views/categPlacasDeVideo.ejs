<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Productos</title>
    <!-- <link rel="stylesheet" href="./css/productDetail.css"> -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('./partials/header') %>

    <main id="products-main">

        <h1>Lista de productos:</h1>

        <div id="Agregar-Producto">
            <a href="/products/create">CREAR NUEVO PRODUCTO</a>
        </div>

        <section>
            <% for (i=0; i < products.length; i++){ %>
        
                <% if (products[i].categoria=="Placas de Video" ){ %>
                    <article>
                        <div class="stock-detail-products">

                            <% if (products[i].stock == true){ %>
                                <h2 id="stock-true">EN STOCK</h2>
                            <% } else { %>                        
                                <h2 id="stock-false">SIN STOCK</h2>
                            <% } %>   
                                                   
                        </div>

                        <a href="/products/<%= products[i].id %>">
                            <img src="<%= products[i].imagenes %>" alt="">
                            <h2><%= products[i].nombre %></h2>
                            <h3> $ <%= products[i].precio %></h3>
                        </a>
                    </article>
                    <% } %>
        
            <% } %>
        </section>

    </main>






    <%- include('./partials/footer') %>

    <%- include('./partials/wsp') %>
</body>
</html>